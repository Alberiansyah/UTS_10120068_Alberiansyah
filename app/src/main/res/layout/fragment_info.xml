<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="fragment.FragmentInfo">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/red"
        android:layout_gravity="center"
        android:id="@+id/logo">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textColor="@color/black"
        android:textAlignment="inherit"
        android:textSize="16sp"
        android:text="Ini adalah aplikasi untuk menulis catatan, dikarenakan adanya halangan terhadap pembuat (Alberiansyah) yaitu Ayah saya masuk Rumah sakit. Aplikasi ini tidak dapat selesai sebagaimana mestinya. Dimohon pengertiannya terima kasih." />

    </LinearLayout>

</FrameLayout>